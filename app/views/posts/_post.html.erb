<tr>
    <td>
        <%= post.id %>
    </td>

    <td>
        <%= post.overtime_request %>
    </td>

    <td>
        <%= post.date %>
    </td>

    <td>
        <%= post.user.full_name %>
    </td>

    <td>
        <%= link_to truncate(post.rationale), post, style:"text-decoration: none;" %>
    </td>

    <td>
        <%= status_labels(post.status)  %>
    </td>

    <td>
        <%= link_to "", edit_post_path(post), id:"edit_#{post.id}", style:"text-decoration: none;", class:"bi bi-pencil index-icons" if policy(post).update? %>
    </td>

    <td>
        <%= button_to "", post_path(post), method: :delete, id:"delete_#{post.id}_from_index", class:"bi bi-trash index-icons" %>
    </td>
</tr>