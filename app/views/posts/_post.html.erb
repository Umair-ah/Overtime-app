<tr>
    <td>
        <%= post.id %>
    </td>

    <td>
        <%= post.overtime_request %>
    </td>

    <td>
        <%= post.date %>
    </td>

    <td>
        <%= post.user.full_name %>
    </td>

    <td>
        <%= link_to truncate(post.rationale), post, style:"text-decoration: none;" %>
    </td>

    <td>
        <%= status_labels(post.status)  %>
    </td>

    <td>
        <%= link_to "Edit", edit_post_path(post), id:"edit_#{post.id}", style:"text-decoration: none;" if policy(post).update? %>
    </td>

    <td>
        <%= button_to "Delete", post_path(post), method: :delete, id:"delete_#{post.id}_from_index", class:"btn btn-sm btn-primary"%>
    </td>
</tr>