<h1>Posts.</h1>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>
							#
						</th>
						<th>
							Date
						</th>
						<th>
							Rationale
						</th>
						<th>
							User
						</th>
					</tr>
				</thead>
				<tbody>
                    <% @posts.each do |post| %>
                        <tr>
                            <td>
                                <%= post.id %>
                            </td>
                            <td>
                                <%= post.date %>
                            </td>
                            <td>
                                <%= truncate(post.rationale) %>
                            </td>
                            <td>
                                <%= post.user.last_name %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
    
