<div>
    <h2><%= @post.rationale %></h2>
</div>

<div class="card card-body bg-light">
    <div>
        <h3><span>Overtime Requested:</span> <%= @post.overtime_request %></h3>
    </div>

    <div>
        <h3><span>Employee:</span> <%= @post.user.full_name %></h3>
    </div>

    <div>
        <h3><span>Date:</span> <%= @post.date %></h3>
    </div>

    <div>
        <h3><span>Current Stage Of Approval:</span> <%= @post.status.titleize %></h3>
    </div>
</div><br/>

<%= link_to "Edit", edit_post_path(@post), class:"btn btn-sm btn-primary" if policy(@post).update? %>